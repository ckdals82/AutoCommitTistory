name: tistory_auto_commit

on:
  schedule:
    - cron: '45 14 * * *'
    
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        if [ -f auto_commit_tistory_git_action/requirements.txt ]; then pip install -r auto_commit_tistory_git_action/requirements.txt; fi
    - name: Run main.py
      run: |
        python auto_commit_tistory_git_action/main.py
      env:
        MY_GITHUB_ACCESS_TOKEN: ${{ secrets.MY_GITHUB_ACCESS_TOKEN }}
        APP_ID: ${{ secrets.APP_ID }}
        SECRET_KEY: ${{ secrets.SECRET_KEY }}
        STATE_PARAM: ${{ secrets.STATE_PARAM }}
        REDIRECT_URI: ${{ secrets.REDIRECT_URI }}
        OUTPUT_TYPE: ${{ secrets.OUTPUT_TYPE }}
        ACCESS_TOKEN: ${{ secrets.ACCESS_TOKEN }}
